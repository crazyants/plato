@model ConfirmEmailViewModel
@{
    AddTitleSegment(T["Confirm Email"]);
}

<div class="layout">
    <div class="layout-header">
        <div class="layout-header-content">
            <h4>@T["Confirm Email"]</h4>
            <span class="text-muted">@T["We'll send you a unique email to confirm you own your email address"]</span>

        </div>
    </div>
    <div class="layout-body">
        <div class="layout-content">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <form asp-controller="Account" asp-action="ConfirmEmail" method="post" data-disable-submit="true" role="form">
        
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="UserIdentifier" class="col-form-label font-weight-bold">@T["Email or username"]</label>
                            <input asp-for="UserIdentifier" placeholder="@T["email@address.com"]" class="form-control" autofocus />
                        </div>
                        <div class="form-group">
                            <button type="submit" role="button" class="btn btn-lg btn-primary btn-block">@T["Submit"]</button>
                        </div>
                    </form>
                </div>
            </div> 
        </div>
    </div>
</div>



