@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Plato.Login.Models
@using Plato.Models.Users;
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel


@{
    ViewData["Title"] = "Login";
}

<h2>@ViewData["Title"].</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <h4>@T["Use a local account to log in."]</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.UserName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="@Model.UserName" value="@Model.UserName" class="form-control" />
                        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                  
                    <label asp-for="@Model.Password" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="@Model.Password" class="form-control" />
                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                    </div>
                       
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">                            
                            <label asp-for="@Model.RememberMe">
                                <input asp-for="@Model.RememberMe" />
                                @T["Remember me"]
                            </label>                               
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Log in</button>
                    </div>
                </div>
                <p>
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">@T["Register as a new user?"]</a>
                </p>
                @*<p>
                        <a asp-action="ForgotPassword">@T["Forgot your password?"]</a>
                    </p>*@
            </form>
        </section>
    </div>
